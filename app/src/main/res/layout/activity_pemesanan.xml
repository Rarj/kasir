<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#afa3f2f2"
    tools:context="com.ivonkhalif.ragnarok.kasir_online.PemesananActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/txmakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan"
        android:textStyle="bold"
        android:textSize="9pt"
        android:gravity="center"
        />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_Pemesan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_list_pesanan">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pembayaran"
        android:background="@color/bg_login"
        android:layout_gravity="bottom"
        >
        <TextView
            android:id="@+id/txtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="Total Pembayaran"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="10000"
            android:textSize="9pt"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>
