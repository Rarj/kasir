<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ivonkhalif.ragnarok.kasir_online.OwnerActivity"
    tools:showIn="@layout/app_bar_owner"
    android:background="#74bafc">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#d6d1d1"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5pt"
            android:text="Total Payment"
            android:textSize="9pt" />
        <TextView
            android:id="@+id/textpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_below="@+id/textpayment"
            android:layout_marginLeft="5pt"
            android:text="Pesanan 1"
            android:textSize="7pt" />
        <TextView
            android:id="@+id/textRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5pt"
            android:text="Rp."
            android:textSize="9pt" />

        <TextView
            android:id="@+id/totalpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5pt"
            android:text="45000"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5pt"
            android:layout_below="@+id/totalpayment"
            android:text="detail  >>>"
            android:textSize="7pt" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#d6d1d1"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textpayment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5pt"
            android:text="Total Payment"
            android:textSize="9pt" />
        <TextView
            android:id="@+id/textpesanan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_below="@+id/textpayment2"
            android:layout_marginLeft="5pt"
            android:text="Pesanan 2"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/textRp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5pt"
            android:text="Rp."
            android:textSize="9pt" />

        <TextView
            android:id="@+id/totalpayment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5pt"
            android:text="20000"
            android:textSize="9pt" />
        <TextView
            android:id="@+id/detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5pt"
            android:layout_below="@+id/totalpayment2"
            android:text="detail  >>>"
            android:textSize="7pt" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#d6d1d1">

        <TextView
            android:id="@+id/textpayment3"
            android:layout_width="wrap_content"
